{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "pretty": true,
    "allowSyntheticDefaultImports": false,
    "declaration": true
  },
  "include": [
    "src/**/*.ts?"
  ]
}